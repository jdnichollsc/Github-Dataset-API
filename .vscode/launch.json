{
  "version": "0.2.0",
  "configurations": [
      {
          "type": "node",
          "request": "launch",
          "name": "Mocha Test All with Options",
          "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
          "args": [
              "--opts", 
              "${workspaceFolder}/test/mocha.opts",
              "${workspaceFolder}/test"
          ],
          "console": "integratedTerminal",
          "internalConsoleOptions": "neverOpen"
      }
  ]
}